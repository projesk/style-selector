  <h1>✨ Tinkami drabužiai tau (pagal figūro tipą, spalvas ir dydį)</h1>
  <p>Automatiškai atrinkti drabužiai iš AboutYou pagal tavo figūrą (smėlio laikrodis), spalvas (juoda, lašinė, žalia), dydį (XL), stilių ir sezoniškumą.</p>
  
  <div class="results" id="results">
    <!-- Produktai bus čia rodomi -->
  </div>

  <script>
    const filteredProducts = [
      {
        title: "Juodas megztinis - ONLY",
        image: "https://img01.ztat.net/article/spp-media-p1/ONLY-WK34IY0L2-Q11@9.jpg",
        url: "https://www.aboutyou.lt/p/only/megztinis-juodas-xl-123456"
      },
      {
        title: "Laisvės suknelė - Zizzi",
        image: "https://img01.ztat.net/article/spp-media-p1/ZI121C1HR-Q11@9.jpg",
        url: "https://www.aboutyou.lt/p/zizzi/suknele-xl-zalia-987654"
      },
      {
        title: "Oversize striukė - JDY",
        image: "https://img01.ztat.net/article/spp-media-p1/JD121U0RE-Q11@12.jpg",
        url: "https://www.aboutyou.lt/p/jdy/oversize-striuke-juoda-xl-159753"
      }
    ];

    const resultsEl = document.getElementById('results');

    filteredProducts.forEach(product => {
      const item = document.createElement('div');
      item.className = 'item';
      item.innerHTML = `
        <img src="${product.image}" alt="${product.title}" />
        <h3>${product.title}</h3>
        <a href="${product.url}" target="_blank">žiūrėti preke ↗</a>
      `;
      resultsEl.appendChild(item);
    });
  </script>
